{
	"name": "@bhsd/codemirror-mediawiki",
	"version": "2.1.7",
	"description": "Modified CodeMirror mode based on wikimedia/mediawiki-extensions-CodeMirror",
	"keywords": [
		"mediawiki",
		"codemirror"
	],
	"homepage": "https://github.com/bhsd-harry/codemirror-mediawiki#readme",
	"bugs": {
		"url": "https://github.com/bhsd-harry/codemirror-mediawiki/issues"
	},
	"license": "GPL-2.0",
	"files":[
		"/src/",
		"!/src/gh-page.ts",
		"!/src/plugins.ts",
		"!/src/*.d.ts",
		"/dist/",
		"/mediawiki.css",
		"/mw/dist/"
	],
	"browser": "dist/main.min.js",
	"main": "./dist/main.min.js",
	"types": "./dist/codemirror.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bhsd-harry/codemirror-mediawiki.git"
	},
	"scripts": {
		"build:core": "esbuild ./src/codemirror.ts --bundle --minify --target=es2018 --format=esm --sourcemap --outfile=dist/main.min.js; tsc --emitDeclarationOnly; rm dist/gh-page.d.ts",
		"build:mw": "bash build.sh mw/base.ts mw/dist/base.js",
		"build:gh-page": "bash build.sh src/gh-page.ts gh-page.js",
		"build": "npm run build:core && npm run build:mw",
		"lint:ts": "tsc --noEmit && tsc --project mw/tsconfig.json --noEmit && eslint --cache .",
		"lint:css": "stylelint *.css",
		"lint": "npm run lint:ts && npm run lint:css",
		"server": "http-server .. -c-1 --cors &",
		"test": "npm run server; open http://127.0.0.1:8080/codemirror-mediawiki/index.html",
		"test:end": "pkill -x http-server"
	},
	"engines": {
		"node": "20.9.0"
	},
	"devDependencies": {
		"@codemirror/autocomplete": "^6.11.1",
		"@codemirror/commands": "^6.3.2",
		"@codemirror/language": "^6.9.3",
		"@codemirror/legacy-modes": "^6.3.3",
		"@codemirror/lint": "^6.4.2",
		"@codemirror/search": "^6.5.4",
		"@codemirror/state": "^6.3.3",
		"@codemirror/view": "^6.22.2",
		"@lezer/highlight": "^1.2.0",
		"@stylistic/eslint-plugin": "^1.5.3",
		"@stylistic/stylelint-plugin": "^2.0.0",
		"@types/jquery": "^3.5.29",
		"@types/oojs-ui": "^0.47.6",
		"@typescript-eslint/eslint-plugin": "^6.12.0",
		"@typescript-eslint/parser": "^6.12.0",
		"esbuild": "^0.19.7",
		"eslint": "^8.56.0",
		"eslint-plugin-es-x": "^7.3.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-regexp": "^2.1.2",
		"eslint-plugin-unicorn": "^50.0.1",
		"http-server": "^14.1.0",
		"stylelint": "^16.1.0",
		"stylelint-config-recommended": "^14.0.0",
		"types-mediawiki": "^1.4.0",
		"typescript": "^5.1.6",
		"wikilint": "^2.3.2"
	}
}
